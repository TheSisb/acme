{
  "name": "@acme/cli",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "yarn build --watch src",
    "build": "tsup src/index.ts --format esm,cjs --clean --onSuccess 'yarn build:declaration-map'",
    "build:declaration-map": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "start": "node ./dist/index.js",
    "lint": "tsc --noEmit && eslint src"
  },
  "devDependencies": {
    "@acme/eslint-config": "*",
    "@acme/tsconfig": "*",
    "@types/node": "17.0.35",
    "@types/yargs": "17.0.10",
    "eslint": "8.16.0",
    "rimraf": "3.0.2",
    "tsup": "6.0.1",
    "typescript": "4.7.2"
  },
  "dependencies": {
    "yargs": "17.5.1"
  }
}
